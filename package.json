{
  "name": "@serusko/reform",
  "author": "serusko",
  "repository": {
    "type": "git",
    "url": "https://github.com/serusko/reform.git"
  },
  "description": "Declarative React form state management container",
  "license": "GPL-3.0-or-later",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "main": "dist/index.js",
  "engine": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "version": "2.0.26",
  "type": "module",
  "scripts": {
    "dev": "export NODE_OPTIONS=--max-old-space-size=8192 && vite",
    "build": "tsc --p ./tsconfig.build.json && jest npm run test && vite build",
    "lint": "tsc --noEmit && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_ENV=test jest --no-cache",
    "test:watch": "NODE_ENV=test jest --no-cache --watchAll",
    "prepublishOnly": "npm run build",
    "formatApp": "prettier --write ./src && yarn eslint ./src --fix",
    "formatLib": "prettier --write ./lib && yarn eslint ./lib --fix",
    "format": "yarn formatLib && yarn formatApp",
    "test:coverage": "npm test -- --coverage",
    "coverage": "yarn test:coverage && bash <(curl -Ls https://coverage.codacy.com/get.sh) report -r ./coverage/lcov.info"
  },
  "dependencies": {
    "object-path": "^0.11.8",
    "use-context-selector": "^1.4.1",
    "yup": "^1.4.0"
  },
  "peerDependencies": {
    "object-path": "^0.11.8",
    "use-context-selector": "^1.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/object-path": "^0.11.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "object-path": "^0.11.8",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^4.0.3",
    "vite-plugin-eslint": "^1.8.1"
  }
}

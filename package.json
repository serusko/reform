{
  "name": "@serusko/reform",
  "author": "serusko",
  "description": "Declarative React form state management container",
  "main": "dist/index.js",
  "license": "GPL-3.0-or-later",
  "types": "dist/index.d.ts",
  "engine": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "version": "2.0.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_ENV=test jest --no-cache",
    "test:watch": "NODE_ENV=test jest --no-cache --watchAll",
    "prepublishOnly": "npm run build",
    "formatApp": "prettier --write ./src && yarn eslint ./src --fix",
    "formatLib": "prettier --write ./lib && yarn eslint ./lib --fix",
    "format": "yarn formatLib && yarn formatApp",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "peerDependencies": {
    "object-path": "^0.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "use-context-selector": "^1.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.2",
    "@types/object-path": "^0.11.4",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@uidotdev/usehooks": "^2.4.1",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "object-path": "^0.11.8",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "use-context-selector": "^1.4.1",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-eslint": "^1.8.1",
    "yup": "^1.3.2"
  }
}
